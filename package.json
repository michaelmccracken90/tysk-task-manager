{
    "name": "tysk-server",
    "version": "1.0.0",
    "description": "A task manager",
    "main": "build/server.js",
    "repository": "https://github.com/Thiaguz/Tysk",
    "author": "Thiaguz <thiagobruno.dev@gmail.com>",
    "license": "MIT",
    "private": true,
    "scripts": {
        "postinstall": "cd client && yarn",
        "build:server": "tsc",
        "build:client": "cd client && npm run build",
        "build": "dotenv -e .env -- rm -rf build client/build && concurrently --kill-others-on-fail -n client,server -c yellow,green \"npm run build:server\" \"npm run build:client\"",
        "dev:client": "cd client && npm start",
        "dev:server": "tsc -w --pretty | nodemon --config \"./nodemon.json\"/",
        "dev": "concurrently --kill-others-on-fail -n client,server -c yellow,green \"npm run dev:client\" \"npm run dev:server\" ",
        "start": "node .",
        "migrate:down": "dotenv -e .env -- knex --knexfile src/database/knexfile.ts migrate:down ",
        "migrate:make": "dotenv -e .env -- knex --knexfile src/database/knexfile.ts migrate:make -x ts ",
        "migrate:latest": "dotenv -e .env -- knex --knexfile src/database/knexfile.ts migrate:latest",
        "migrate:rollback": "dotenv -e .env -- knex --knexfile src/database/knexfile.ts migrate:rollback",
        "seed:make": "dotenv -e .env -- knex --knexfile src/database/knexfile.ts seed:make -x ts ",
        "seed:run": "dotenv -e .env -- knex --knexfile src/database/knexfile.ts seed:run ",
        "lint": "eslint **/*",
        "test": "yarn lint"
    },
    "dependencies": {
        "bcrypt": "^5.0.0",
        "chromath": "^0.0.7",
        "concurrently": "^5.2.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "knex": "^0.21.1",
        "mysql2": "^2.1.0",
        "pg": "^8.2.1"
    },
    "devDependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/cors": "^2.8.6",
        "@types/express": "^4.17.6",
        "@types/faker": "^4.1.12",
        "@types/jsonwebtoken": "^8.5.0",
        "@typescript-eslint/eslint-plugin": "^3.5.0",
        "@typescript-eslint/parser": "^3.5.0",
        "dotenv-cli": "^3.2.0",
        "eslint": "6.6.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.20.3",
        "faker": "^4.1.0",
        "nodemon": "^2.0.4",
        "prettier": "^2.0.5",
        "ts-node": "^8.10.2",
        "typescript": "3.9.6"
    }
}
